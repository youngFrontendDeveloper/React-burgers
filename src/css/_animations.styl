/*
  Анимация:
  enter
  exit
*/
// Появление заказанного бургера слева
.order-enter
  transition: 0.5s;
  transform: translateX(-120%);
  max-height: 0;

  &.order-enter-active
    transform: translateX(0);
    max-height: 60px;
    padding: 2rem 0 !important;

// Исчезновение удаленного бургера вправо
.order-exit
  transition: 0.5s;
  transform: translateX(0);

  &.order-exit-active
    transform: translateX(120%);
    padding: 0;

// Появление и исчезновение цифр (количества заказанных бургеров) в count
.count-enter
  transition: 0.5s;
  transform: translateY(100%);

  &.count-enter-active
    transform: translateY(0);

.count-exit
  transition: 0.5s;
  transform: translateY(0);
  position: absolute;
  left: 0;
  bottom: 0;

  &.count-exit-active
    transform: translateY(-100%);


// Появление суммы  (стоимости заказанных бургеров) в count*price
.cost-enter
  transition: 0.5s;
  transform: translateY(100%);

  &.cost-enter-active
    transform: translateY(0);

// исчезновение суммы  (стоимости заказанных бургеров) в count*price
.cost-exit
  transition: 0.5s;
  transform: translateY(0);
  position: absolute;
  left: 0;
  bottom: 0;

  &.cost-exit-active
    transform: translateY(-100%);


